<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f2efe4">

    <!-- Top bar containing ImageView and TextView -->
    <RelativeLayout
        android:id="@+id/topBar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f2efe4">

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Your image"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/imageshare"
        android:layout_width="385dp"
        android:layout_height="240dp"
        android:layout_below="@+id/topBar1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:background="@color/disable"/>
<GridLayout
    android:layout_width="385dp"
    android:layout_height="350dp"
    android:id="@+id/grid"
    android:layout_below="@+id/imageshare"
    android:layout_marginTop="10dp"
    android:layout_centerHorizontal="true"
    >
<TextView
    android:id="@+id/solid"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Solid Colours"/>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:layout_row="1"
        android:layout_column="0"
        tools:srcCompat="@tools:sample/avatars"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"/>
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:layout_row="1"
        android:layout_column="1"
        tools:srcCompat="@tools:sample/avatars"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"/>
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:layout_row="1"
        android:layout_column="2"
        tools:srcCompat="@tools:sample/avatars"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"/>
    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:layout_row="1"
        android:layout_column="3"
        tools:srcCompat="@tools:sample/avatars"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        />
    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:layout_row="2"
        android:layout_column="0"
        tools:srcCompat="@tools:sample/avatars"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"/>
    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:layout_row="2"
        android:layout_column="1"
        tools:srcCompat="@tools:sample/avatars"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"/>
    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:layout_row="2"
        android:layout_column="2"
        tools:srcCompat="@tools:sample/avatars"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"/>
    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:layout_row="2"
        android:layout_column="3"
        tools:srcCompat="@tools:sample/avatars"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"/>
    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:layout_row="3"
        android:layout_column="0"
        tools:srcCompat="@tools:sample/avatars"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"/>
    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:layout_row="3"
        android:layout_column="1"
        tools:srcCompat="@tools:sample/avatars"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"/>
</GridLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/share"
        android:layout_width="335dp"
        android:layout_height="48dp"
        android:text="Share Image"
        android:textColor="@color/white"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="13dp"
        android:background="@drawable/imagebutton"
        />
</RelativeLayout>