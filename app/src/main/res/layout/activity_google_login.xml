<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="natomic.com.techuplabs.google_login"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:paddingBottom="80dp"
    android:background="#f2efe4">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="63dp"
        android:src="@drawable/profile"
        android:layout_below="@+id/main"
        tools:ignore="NotSibling" />

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/imageView3"
        >

        <TextView
            android:id="@+id/logintext1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome To Natomic"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:textAlignment="center"
            />
        <TextView
            android:id="@+id/logintext2"
            android:layout_width="327dp"
            android:layout_height="wrap_content"
            android:text="Create a free Natomic account and build a habit!"
            android:textSize="17sp"
            android:layout_marginTop="5dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/google"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/imagebutton"
        android:enabled="true"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="15dp"
        android:text="Sign up with Google"
        android:textColor="#f2efe4"
        android:textColorHighlight="#f2efe4"
        android:textColorHint="#f2efe4"
        android:textColorLink="#f2efe4"
        android:layout_below="@+id/layout1"
        android:drawableLeft="@drawable/google"
        android:textAlignment="textStart"
        android:drawablePadding="10dp"
        android:paddingStart="85dp"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/free"
        android:layout_width="match_parent"
        android:layout_height="48dp"

        android:layout_marginBottom="15dp"
        android:background="@drawable/imagebutton"
        android:enabled="true"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:text="Try free and continue"
        android:textColor="#f2efe4"
        android:textColorHighlight="#f2efe4"
        android:textColorHint="#f2efe4"
        android:textColorLink="#f2efe4"
        android:layout_below="@+id/google"
        />
</RelativeLayout>